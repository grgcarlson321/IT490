@{
    ViewBag.Title = "PWE Reports";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>PWE Reports</title>
</head>
<body>


    <div align="center">
        <h1>PWE: <small>Reports Section</small></h1><br />
    </div>
    @model IEnumerable<PWEapp.Models.ReportCheckBox>
    
    @using (Html.BeginForm("SubmitReportList", "Reports"))
    {
        <table>
         
            @foreach(var report in this.ViewData.Model)
            { 
                <tr>
                    <td>
                   @Html.CheckBoxFor(m => @report.CheckBox, new { @checked = "checked", @id = @report.Id, @name = "reportSubmit" })</td> 

                    <td style="padding-left:5px;">@report.Name</td>
                </tr>
             
            }
        </table>
        <input class="button" id="submit" type="submit"value="Submit" />    
    }
        
    
</body>
</html>
